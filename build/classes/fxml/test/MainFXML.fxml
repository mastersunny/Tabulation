<BorderPane fx:id="mainLayout" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.test.Controller">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="434.0" fitWidth="770.0" VBox.vgrow="ALWAYS">
                    <image>
                        <Image url="img/carnival.jpg" />
                    </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
                </ImageView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="home">
                    <items>
                        <MenuItem fx:id="home" mnemonicParsing="false" onAction="#home" text="home" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="openCSV" mnemonicParsing="false" onAction="#openCSV" text="open CSV" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="exportAsPDF" mnemonicParsing="false" text="Export As PDF" />
                    </items>
                </Menu>  
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
   <bottom>
      <Label prefHeight="36.0" prefWidth="186.0" text="All rights reserved @SUST-CSE" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
